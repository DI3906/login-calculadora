<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#080202"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="serif-monospace"
        android:gravity="center_horizontal"
        android:text="Cambiar contraseña"
        android:textAllCaps="true"
        android:textColor="#FCE9F1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--ANTERIOR CONTRASEÑA-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Ingrese su anterior contraseña:"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FCE9F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contraseniaAntigua"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_style"
        android:fontFamily="monospace"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="#F1D4E5"
        android:textColorHighlight="#F1D4E5"
        android:textColorHint="#B5FCE9F1" />

    <!--NUEVA CONTRASEÑA-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Ingrese la nueva contraseña:"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FCE9F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contraseniaNueva"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_style"
        android:fontFamily="monospace"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="#F1D4E5"
        android:textColorHighlight="#F1D4E5"
        android:textColorHint="#B5FCE9F1" />


    <Button
        android:id="@+id/btnCambiarContrasenia"
        android:layout_width="wrap_content"
        android:text="Guardar cambios"
        android:textColor="#FCE9F1"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/btn_calcular"
        android:onClick="onClick"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        />

</LinearLayout>